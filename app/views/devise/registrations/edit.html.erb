<% provide :title, t(".title") %>
<h1><%= t ".header" %> <%= resource_name.to_s.humanize %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div><%= t ".waiting_confirm" %> <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field form-group">
        <%= f.label t ".password" %> <i>(<%= t ".leave_blank" %>)</i><br />
        <%= f.password_field :password, autocomplete: "new-password",
          class: "form-control", autofocus: true %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> <%= t ".character_min" %></em>
        <% end %>
      </div>

      <div class="field form-group">
        <%= f.label t ".password_confirm" %><br />
        <%= f.password_field :password_confirmation,
          autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label t ".current_password" %> <i>(<%= t ".need_currentpass" %>)</i><br />
        <%= f.password_field :current_password,
          autocomplete: "current-password", class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label t ".name" %><br />
        <%= f.text_field :name, autocomplete: "name", class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label t ".phone" %><br />
        <%= f.text_field :phone, autocomplete: "phone", class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label t ".address" %><br />
        <%= f.text_field :address, autocomplete: "address", class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit t(".update"), class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= link_to t(".back"), :back, class: "btn btn-success" %>
  </div>
</div>

 <%= form_for(@user) do |f| %>
  <%= render "shared/error_messages", object: @user %>

  <%= f.label t(".name") %>
  <%= f.text_field :name, class: "form-control" %>

  <%= f.label t(".email") %>
  <%= f.email_field :email, class: "form-control" %>

  <%= f.label t(".password") %>
  <%= f.password_field :password, class: "form-control" %>

  <%= f.label t(".confirmation") %>
  <%= f.password_field :password_confirmation, class: "form-control" %>
  
  <%= f.label t(".role")%><br />

  <%= f.radio_button :role, User.roles.key(User.roles[:trainee]), checked: true %>
  <%= f.label :role, t(".trainee"), value: User.roles.key(User.roles[:trainee]) %>

  <%= f.radio_button :role, User.roles.key(User.roles[:supervisor]) %>
  <%= f.label :role, t(".supervisor"), value: User.roles.key(User.roles[:supervisor]) %>


  <%= f.submit yield(:button), class: "btn btn-primary" %>
<% end %>

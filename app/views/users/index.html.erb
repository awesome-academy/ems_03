<% provide :title, t(".title") %>
<h1><% t ".header" %></h1>

<div class="container">
  <%= button_to t(".new_user"), {action: :new}, {method: :get,
    class: "btn btn-success", id: "btn-new-user"} %>
</div>

<div class="container">
  <ul class="users">
    <% @users.each do |user| %>
        <li>    
          <%= link_to user.name, user %>
        </li>
    <% end %>
  </ul>
</div>

<%= paginate @users, theme: "twitter-bootstrap-3" %>

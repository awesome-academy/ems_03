<% provide :title, t(".title") %>
<% provide :button_text, t(".submit") %>
<h1>
  <%= @exam.name %>
</h1>

<div class="container">
  <div class="row">
    <div class="container">
      <%= hidden_field_tag :remaining_time, @remaining_time %>
      <div class="timer">
        <h4><%= t ".remaining_time"%></h4>
        <div id="clock"></div>
      </div>
    </div>
    <%= render "form" %>
  </div>
</div>

<% provide :title, @question.subject_name %>
<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h1>
        <%= @question.subject_name %>
      </h1>
      <p>
        <%= t ".question" %>: <%= @question.content %>
      </p>
      <p>
        <%= t ".difficulty" %>: <%= @question.level %>
      </p>
      <p>
        <%= t ".q_type" %>: <%= @question.question_type
          .split("_").map(&:capitalize).join(" ") %>
      </p>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th class="col-md-2" scope="col"><%= t ".correct" %></th>
            <th scope="col"><%= t ".answer" %></th>
          </tr>
        </thead>
        <tbody class="answers">  
            <%= render partial: "answers/answer",
              collection: @question.answers %>
        </tbody>
      </table>
      <%= link_to t(".edit"), edit_question_path, class: "btn btn-info" %>
      <%= button_to t(".delete"), @question,
        {method: :delete, class: "btn btn-danger",
        data:{confirm: t(".sure")}} %>
    </div>
  </div>
</div>

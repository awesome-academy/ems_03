<div class="nested-fields" id="new-answer">
  <%= f.label :content, t(".answer") %>
  <%= f.text_field :content, class: "form-control" %>

  <%= f.check_box :correct, {class: "answer-checkbox"}, "1", "0" %>
  <%= f.label :correct, t(".correct_answer") %>

  <%= f.hidden_field :_destroy, as: :hidden %>
  <%= link_to_remove_association t(".delete_answer"), f,
    class: "btn btn-danger" %>
</div>
